# Google Sheets Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json

# Spreadsheet ID (get this from the Google Sheets URL)
SPREADSHEET_ID=your_spreadsheet_id_here

# Sheet Names (customize if your sheets have different names)
ASSOCIATES_SHEET=Associates
PROJECTS_SHEET=Project Master
ALLOCATIONS_SHEET=Project Allocation Tracker
INVOICES_SHEET=Invoice
PAYROLL_SHEET=Payroll
EXPENSES_SHEET=Expenses
CURRENCY_SHEET=Currency Rates
TIMESHEETS_SHEET=Timesheets
CUSTOMERS_SHEET=Customers

# CRMS Google Spreadsheet Configuration
# Create a separate spreadsheet for CRMS data and share it with your service account
CRMS_SPREADSHEET_ID=your_crms_spreadsheet_id_here

# CRMS Sheet Names
CRMS_LEADS_SHEET=Leads
CRMS_OPPORTUNITIES_SHEET=Opportunities
CRMS_CUSTOMERS_SHEET=Customers
CRMS_CONTACTS_SHEET=Contacts
CRMS_DEALS_SHEET=Deals
CRMS_TASKS_SHEET=Tasks
CRMS_CALLS_SHEET=Calls

# Google Drive Configuration
DRIVE_TEMPLATES_FOLDER_ID=your_google_drive_folder_id_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Authentication (Google OAuth)
# Get your Client ID from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-use-32-chars-min
JWT_EXPIRY_HOURS=24
    
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@example.com
SMTP_USE_TLS=true
    
# Gmail OAuth2 Configuration (Optional, replaces SMTP_PASSWORD if SMTP_USE_OAUTH2=true)
SMTP_USE_OAUTH2=false
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Guhatek API Credentials (Talent Management / External Candidates)
GUHATEK_API_URL=https://api-careerpage.guhatek.com
GUHATEK_API_KEY=guhatek-job-applicant
